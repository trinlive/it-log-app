<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>IT Helpdesk Logs</title>
    
    <script src="https://cdn.tailwindcss.com"></script>

    <link href="https://fonts.googleapis.com/css2?family=Sarabun:wght@300;400;500;600&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        body { font-family: 'Sarabun', sans-serif; background-color: #f3f4f6; }
    </style>
</head>
<body class="text-gray-800">

    <div class="container mx-auto px-4 py-8 max-w-7xl">
        
        <div class="flex flex-col md:flex-row justify-between items-center mb-6 gap-4">
            <div>
                <h1 class="text-3xl font-bold text-gray-800">ðŸ“‹ IT Helpdesk Logs</h1>
                <p class="text-sm text-gray-500 mt-1">à¸‚à¹‰à¸­à¸¡à¸¹à¸¥à¸¢à¹‰à¸­à¸™à¸«à¸¥à¸±à¸‡ (Legacy Data)</p>
            </div>
            
            <button id="btnSync" onclick="syncData()" 
                class="group bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-5 rounded-lg shadow-md transition-all duration-200 flex items-center gap-2">
                <i class="fa-solid fa-rotate group-hover:animate-spin"></i>
                <span>Sync Data</span>
            </button>
        </div>

        <div class="bg-white shadow-lg rounded-xl overflow-hidden border border-gray-200">
            <div class="overflow-x-auto">
                <table class="w-full text-sm text-left">
                    <thead class="bg-gray-800 text-white uppercase text-xs">
                        <tr>
                            <th class="px-6 py-4 font-semibold tracking-wider">Ticket No.</th>
                            <th class="px-6 py-4 font-semibold tracking-wider">Category</th>
                            <th class="px-6 py-4 font-semibold tracking-wider w-1/3">Details</th>
                            <th class="px-6 py-4 font-semibold tracking-wider">Reporter</th>
                            <th class="px-6 py-4 font-semibold tracking-wider text-center">Status</th>
                            <th class="px-6 py-4 font-semibold tracking-wider text-right">Date</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        <% if (logs.length > 0) { %>
                            <% logs.forEach(function(log, index) { %>
                                <tr class="hover:bg-blue-50 transition-colors duration-150 <%= index % 2 === 0 ? 'bg-white' : 'bg-gray-50' %>">
                                    
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <span class="font-bold text-blue-600 font-mono"><%= log.ticket_no %></span>
                                    </td>

                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <span class="px-2 py-1 text-xs font-semibold rounded-md bg-gray-200 text-gray-700 border border-gray-300">
                                            <%= log.category %>
                                        </span>
                                    </td>

                                    <td class="px-6 py-4 text-gray-600 leading-relaxed">
                                        <%= log.details %>
                                    </td>

                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="font-medium text-gray-900"><%= log.reporter_name %></div>
                                        <div class="text-xs text-gray-400 mt-0.5"><%= log.reporter_dept %></div>
                                    </td>

                                    <td class="px-6 py-4 whitespace-nowrap text-center">
                                        <% if (log.status === 'à¹€à¸ªà¸£à¹‡à¸ˆà¸ªà¸´à¹‰à¸™') { %>
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 border border-green-200">
                                                <span class="w-1.5 h-1.5 mr-1.5 bg-green-500 rounded-full"></span>
                                                <%= log.status %>
                                            </span>
                                        <% } else { %>
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800 border border-yellow-200">
                                                <span class="w-1.5 h-1.5 mr-1.5 bg-yellow-500 rounded-full"></span>
                                                <%= log.status %>
                                            </span>
                                        <% } %>
                                    </td>

                                    <td class="px-6 py-4 whitespace-nowrap text-right text-gray-500 font-mono text-xs">
                                        <%= log.created_date ? new Date(log.created_date).toLocaleDateString('th-TH', { year: '2-digit', month: 'short', day: 'numeric', hour: '2-digit', minute:'2-digit' }) : '-' %>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="6" class="px-6 py-10 text-center text-gray-400 bg-gray-50">
                                    <i class="fa-solid fa-inbox text-4xl mb-3"></i>
                                    <p>à¹„à¸¡à¹ˆà¸žà¸šà¸‚à¹‰à¸­à¸¡à¸¹à¸¥à¹ƒà¸™à¸£à¸°à¸šà¸š</p>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
            
            <div class="bg-gray-50 px-6 py-3 border-t border-gray-200 text-xs text-gray-500 flex justify-between">
                <span>Displaying latest logs</span>
                <span>Total: <%= logs.length %> items</span>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
    <script>
        async function syncData() {
            const btn = document.getElementById('btnSync');
            const icon = btn.querySelector('i');
            const text = btn.querySelector('span');
            
            // Loading State
            btn.disabled = true;
            btn.classList.add('opacity-75', 'cursor-not-allowed');
            icon.classList.add('animate-spin');
            text.textContent = 'Syncing...';

            try {
                const res = await fetch('/api/sync');
                const data = await res.json();
                
                if(res.ok) {
                    await Swal.fire({
                        title: 'Sync Completed!',
                        text: `Updated ${data.total_records} records successfully.`,
                        icon: 'success',
                        confirmButtonColor: '#2563eb'
                    });
                    location.reload(); 
                } else {
                    throw new Error(data.message || 'Error syncing');
                }
            } catch (err) {
                Swal.fire({
                    title: 'Sync Failed',
                    text: err.message,
                    icon: 'error',
                    confirmButtonColor: '#dc2626'
                });
            } finally {
                // Reset State
                btn.disabled = false;
                btn.classList.remove('opacity-75', 'cursor-not-allowed');
                icon.classList.remove('animate-spin');
                text.textContent = 'Sync Data';
            }
        }
    </script>
</body>
</html>