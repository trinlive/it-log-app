<div class="bg-white p-4 rounded-xl shadow-sm border border-slate-200 mb-6 grid grid-cols-1 md:grid-cols-5 gap-4">
    
    <div class="md:col-span-2 relative">
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <i class="fa-solid fa-magnifying-glass text-slate-400"></i>
        </div>
        <input type="text" id="searchInput" onkeyup="filterTable()" 
            class="block w-full pl-10 pr-3 py-2.5 border border-slate-300 rounded-lg leading-5 bg-slate-50 placeholder-slate-400 focus:outline-none focus:bg-white focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-150 ease-in-out sm:text-sm" 
            placeholder="ค้นหา Ticket No, รายละเอียด, หรือชื่อผู้แจ้ง...">
    </div>

    <div class="relative">
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <i class="fa-solid fa-layer-group text-slate-400"></i>
        </div>
        <select id="categoryFilter" onchange="filterTable()" 
            class="block w-full pl-10 pr-10 py-2.5 border border-slate-300 rounded-lg leading-5 bg-slate-50 focus:outline-none focus:bg-white focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm appearance-none cursor-pointer">
            <option value="">ทุกหมวดหมู่ (All)</option>
            <% 
                let uniqueCats = [...new Set(logs.map(item => (item.category || '').trim()))].filter(Boolean);
                uniqueCats.sort((a, b) => getCategoryOrder(a) - getCategoryOrder(b));
                uniqueCats.forEach(cat => { 
            %>
                <option value="<%= cat %>"><%= getCategoryLabel(cat) %></option>
            <% }); %>
        </select>
        <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
            <i class="fa-solid fa-chevron-down text-slate-400 text-xs"></i>
        </div>
    </div>

    <div class="relative">
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <i class="fa-solid fa-list-check text-slate-400"></i>
        </div>
        <select id="statusFilter" onchange="filterTable()" 
            class="block w-full pl-10 pr-10 py-2.5 border border-slate-300 rounded-lg leading-5 bg-slate-50 focus:outline-none focus:bg-white focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm appearance-none cursor-pointer">
            <option value="">สถานะทั้งหมด (All)</option>
            <% 
                let uniqueStatus = [...new Set(logs.map(item => (item.status || '').trim()))].filter(Boolean);
                uniqueStatus.sort((a, b) => getStatusOrder(a) - getStatusOrder(b));
                uniqueStatus.forEach(st => { 
            %>
                <option value="<%= st %>"><%= getStatusLabel(st) %></option>
            <% }); %>
        </select>
        <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
            <i class="fa-solid fa-chevron-down text-slate-400 text-xs"></i>
        </div>
    </div>

    <div class="relative">
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <i class="fa-solid fa-list-ol text-slate-400"></i>
        </div>
        <select id="limitFilter" onchange="filterTable()" 
            class="block w-full pl-10 pr-10 py-2.5 border border-slate-300 rounded-lg leading-5 bg-slate-50 focus:outline-none focus:bg-white focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm appearance-none cursor-pointer">
            <option value="100" selected>แสดง 100</option>
            <option value="500">แสดง 500</option>
            <option value="1000">แสดง 1000</option>
            <option value="all">แสดงทั้งหมด</option>
        </select>
        <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
            <i class="fa-solid fa-chevron-down text-slate-400 text-xs"></i>
        </div>
    </div>

</div>